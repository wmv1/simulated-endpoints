<%= form_with  model: @mock do |f| %>
    <div class="form-group">
    <%= f.label :nome %>:
    <%= f.text_field :name, placeholder: "Mock do site teste", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :path %>:
    <%= f.text_field :path, placeholder: "/path/exemplo", class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.label :http_status %>:
      <%= f.text_field :status, placeholder: "200", class: "form-control" %>
      </div>
    <div class="form-group">
    <%= f.label :timeout %>:
      <%= f.text_field :timeout, placeholder: "30", class: "form-control" %>
      </div>
    <div class="form-group">
    <%= f.label :content %>:
      <%= f.text_area :content, placeholder: "{\"Ola\" : \"Fulano\"}", class: "form-control"%>
    </div>
    <%= f.submit "Enviar", class: "btn form-control btn-primary" %>
  <% end %>
<div class="row">
  <div class="col-sm-12">
    <%= link_to "Voltar", mocks_path, class: 'btn btn-primary' %>
  </div>
</div>
